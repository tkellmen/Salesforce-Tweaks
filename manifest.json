{
    "manifest_version": 3,
    "name": "Salesforce Tweaks",
    "version": "1.0",
    "description": "Salesforce Tweaks adds a button to quickly collapse the sidebar in Salesforce. More tweaks coming soon!",
    "content_scripts": [
        {
            "js": ["content.js"],
            "css": ["styles.css"],
            "matches": [
                "*://*.lightning.force.com/lightning/setup/*",
                "*://*.salesforce-setup.com/lightning/setup/*"
            ],

            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_title": "Salesforce Tweaks"
    }
}
